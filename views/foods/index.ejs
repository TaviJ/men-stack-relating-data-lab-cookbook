<body>
  <%- include('../partials/_navbar.ejs') %>

  <h1>My Pantry</h1>

  <a href="/users/<%= userId %>/foods/new">Add New Item</a>

  <% if (pantry.length === 0) { %>
    <p>There are no items in this pantry.</p>
  <% } else { %>
    <ul>
      <% pantry.forEach(item => { %>
        <li>
          <%= item.name %>

          <a href="/users/<%= userId %>/foods/<%= item._id %>/edit">Edit</a>

          <form action="/users/<%= userId %>/foods/<%= item._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button>Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } %>
</body>
